@page
@model IndexModel
@{
    ViewData["Title"] = "MyTerm";
}

<div class="text-center">
    <h1 class="display-4">Find Courses with Friends</h1>
    <p>Login and schedule your term!</p>


    <button onclick="location.href='?handler=FetchStudents'">Login</button>
    <button id="openSignUpPage">Sign Up</button>
    @if (Model.Students != null)
    {
        <ul>
            @foreach (var student in Model.Students)
            {
                <li>@student.FirstName @student.LastName</li> <!-- Display student properties as needed -->
            }
        </ul>
    }







    <script>
        document.getElementById("openSignUpPage").addEventListener("click", function () {
            window.location.href = "/SignUp";
        });
    </script>
    <script>
        document.getElementById("openLoginPage").addEventListener("click", function () {
            window.location.href = "/Login";
        });
    </script>
</div>
