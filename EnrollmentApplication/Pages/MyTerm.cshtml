@page
@model EnrollmentApplication.Pages.My_TermModel
@inject DataAccess DataAccessService
@{
    ViewData["Title"] = "My Term";
}

<header>
    <h1>@Model.SessionStudent.FirstName, @Model.SessionStudent.Grade</h1>
    <link rel="stylesheet" type="text/css" href="site.css" />
</header>
<body>
    <div id="container">
        <div class="default-form">
            <form method="post">
                <h2>Fall 20</h2>
                <ul class="list-unstyled">
                    @foreach (var course in Model.StudentCourses)
                    {
                        <li>
                            <button type="submit" name="removeCourse" value="@course.CourseId" class="btn btn-primary btn-block">@course.CourseId</button>
                        </li>
                    }
                    <li><a class="btn btn-secondary btn-block" href="/AddCourse">Add Course...</a></li>
                </ul>
            </form>
        </div>

        <div class="default-form">
            <form>
                <h2>Recommendations</h2>
                <ul class="list-unstyled">
                    @foreach (var course in Model.RecommendedCourses)
                    {
                        <li>@course.Name</li>
                    }
                </ul>
            </form>
        </div>
    </div>
</body>
